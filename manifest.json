{
  "manifest_version": 3,
  "name": "MyBuzzPicks",
  "description": "Subscribe to Hive authors and view their latest posts.",
  "version": "1.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/bee_icon_16x16.png",
      "48": "icons/bee_icon_48x48.png",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/bee_icon_16x16.png",
    "48": "icons/bee_icon_48x48.png",
    "128": "icons/icon128.svg"
  }
}